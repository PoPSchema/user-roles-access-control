{
    "name": "getpop/user-roles-access-control",
    "type": "library",
    "description": "Access Control based on the user having a given role/capability",
    "keywords": [
        "PoP",
        "UserRolesAccessControl"
    ],
    "homepage": "https://github.com/getpop/user-roles-access-control",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php" : "~7.1",
        "getpop/user-roles": "dev-master",
        "getpop/user-state-access-control": "dev-master"
    },
    "require-dev": {
        "getpop/cache-control": "dev-master",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "suggest": {
        "getpop/cache-control": "Integrates well with Cache Control"
    },
    "autoload": {
        "psr-4": {
            "PoP\\UserRolesAccessControl\\": "src"
        },
        "files": [
            "initialize.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\UserRolesAccessControl\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
